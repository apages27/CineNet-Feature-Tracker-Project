@model IEnumerable<FeatureTrackingToolExperiment.Models.FeatureModel>

@{
    ViewBag.Title = "FeatureList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Feature List</h2>

<p>
    @Html.ActionLink("Add New Feature", "AddFeature")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Title")
        </th>
        <th>
            @Html.DisplayName("Priority")
        </th>
        <th>
            @Html.DisplayName("Description")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FeatureTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FeaturePriority)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FeatureDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
