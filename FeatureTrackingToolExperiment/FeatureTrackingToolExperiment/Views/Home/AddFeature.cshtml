@model FeatureTrackingToolExperiment.Models.FeatureModel

@{
    ViewBag.Title = "Add Feature";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (isAdd)
{
    <h2>Add Feature</h2>
}
else
{
    <h2>Edit Feature</h2>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Feature Title", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FeatureTitle)
                @Html.ValidationMessageFor(model => model.FeatureTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Feature Priority", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FeaturePriority)
                @Html.ValidationMessageFor(model => model.FeaturePriority)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Feature Description", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FeatureDescription)
                @Html.ValidationMessageFor(model => model.FeatureDescription)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "FeatureList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
